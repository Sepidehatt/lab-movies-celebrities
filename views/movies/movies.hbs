<h2>List of All Movies</h2>

{{#each movies}}
  <h3>{{this.title}}</h3>
  <h5>genre:</h5>
  <h5>{{this.genre}}</h5>
  <h5> plot:</h5>
  <p>{{this.plot}}</p>
  <h5> cast:</h5>

  <p>{{this.cast.0.name}}</p>
  <a href="/movies/{{this._id}}">See more Detail</a>
  <a href="/movies/{{this.id}}/edit">Edit</a>
{{/each}}

